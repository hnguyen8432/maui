<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd"
       default-destroy-method="destroy">

    <camelContext xmlns="http://camel.apache.org/schema/spring" >
        <route>
            <!-- <from uri="activemq:topic:{{jms.topic}}?destination.consumer.exclusive=false"/> -->
            <from uri="activemq:topic:queue_received?destination.consumer.exclusive=false"/>
            <to uri="stream:out" />
        </route>

        <route>
            <from uri="direct:send-message" />
            <to uri="activemq:topic:queue-send?disableReplyTo=true" />
        </route>
    </camelContext>
</beans>
